{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
